@{
    ViewData["Title"] = "Employees";
}
<div class="row">
    <div class="col-md-12">
        <a asp-action="Create" asp-controller="Employee" class="btn btn-sucess">Fill Employee</a>
    </div>
</div>

<table class="table">
  <thead>
    <tr>
      <th scope="col">Code</th>
      <th scope="col">Initails</th>
      <th scope="col">FName</th> 
      <th scope="col">Surname</th> 
      <th scope="col">Address1 </th> 
      <th scope="col">Address2 </th> 
      <th scope="col">DB</th> 
      <th scope="col">Status</th> 
      <th>Manage</th>
  </thead>
            <tbody>
                @foreach(var item in Model){
                <tr>
                    <th scope="row">@item.Id</th>
                    <td>@item.Initials</td>
                    <td>@item.FirstName</td>
                    <td>@item.Surname</td>
                    <td>@item.Address1</td>
                    <td>@item.Address2</td>
                    <td>@item.DOB</td>
                    <td>@item.Status</td>
                    <td>
                    <a asp-action="Edit" asp-controller="Employee" asp-route-id="@item.Id">Edit</a>
                    <a asp-action="Delete" asp-controller="Employee" asp-route-id="@item.Id">Delete</a>
                    </td>

                </tr>
                }
            </tbody>
</table>
